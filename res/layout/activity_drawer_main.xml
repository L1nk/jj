<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:fillViewport="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textHeading"
            android:gravity="center"
            android:background="@drawable/needtogetaway"
            android:layout_width="339dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff33b5e5"
            android:textStyle="bold"
            android:textSize="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp" />

        <EditText
            android:layout_width="284dp"
            android:text="Say what you're doing."
            android:textColor="#ACACAC"
            android:layout_height="wrap_content"
            android:id="@+id/customStatus"
            android:layout_gravity="center"
            android:width="200dp"
            android:layout_marginTop="19dp" />

        <Button
            android:id="@+id/buttonStatus"
            android:layout_width="261dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/detach"
            android:onClick="detachCustom"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center" >

            <ImageButton
                android:id="@+id/buttonDriving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="-15sp"
                android:onClick="detachDriving"
                android:background="@drawable/car" />

            <ImageButton
                android:id="@+id/buttonBusy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="-15sp"
                android:onClick="detachBusy"
                android:background="@drawable/work"
            />

            <ImageButton
                android:id="@+id/buttonNapping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="-15sp"
                android:onClick="detachEating"
                android:background="@drawable/eating"
            />

        </LinearLayout>

        <TextView
        android:id="@+id/currentStatusHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="You are currently"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff33b5e5"
        android:textStyle="bold"
        android:textSize="32dp"
            android:layout_marginTop="41dp" />

        <TextView
            android:id="@+id/currentStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff33b5e5"
            android:textStyle="bold"
            android:textSize="32dp"/>

        <Button
            android:id="@+id/goAvailable"
            android:layout_width="261dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginBottom="61dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/imback"
            android:onClick="goAvailable"/>

    </LinearLayout>

    </ScrollView>
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</android.support.v4.widget.DrawerLayout>