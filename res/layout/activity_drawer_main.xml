<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e4cc"
        android:fillViewport="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textHeading"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:gravity="center"
            android:text="Want to get away?"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/buttonStatus"
            android:layout_width="250dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_marginBottom="61dp"
            android:layout_marginTop="38dp"
            android:background="#ffffbb33"
            android:onClick="awayOptionsMenu"
            android:text="detach"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="32dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center" >

            <ImageButton
                android:id="@+id/buttonDriving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="-5sp"
                android:onClick="detachDriving"
            />

            <ImageButton
                android:id="@+id/buttonBusy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="-5sp"
                android:onClick="detachBusy"
            />

            <ImageButton
                android:id="@+id/buttonNapping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="-5sp"
                android:onClick="detachNapping"
            />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</android.support.v4.widget.DrawerLayout>