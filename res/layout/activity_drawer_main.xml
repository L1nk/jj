<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:fillViewport="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:width="300dp"
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:background="@drawable/statusentry"
            android:layout_gravity="center"
            android:layout_marginTop="13dp">

        <EditText
            android:layout_width="284dp"
            android:hint="Let friends know what you're doing."
            android:textColor="#8f9196"
            android:layout_height="wrap_content"
            android:id="@+id/customStatus"
            android:layout_gravity="center"
            android:height="74dp"
            android:textSize="16dp"
            android:singleLine="true"
            android:onClick="removeText"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="8dp" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonStatus"
            android:layout_width="182dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginBottom="56dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/detach"
            android:onClick="detachCustom"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center" >

            <ImageButton
                android:id="@+id/buttonDriving"
                android:layout_width="70dp"
                android:layout_height="94dp"
                android:drawablePadding="20dp"
                android:onClick="detachDriving"
                android:background="@drawable/car"
                android:layout_marginRight="25dp" />

            <ImageButton
                android:id="@+id/buttonBusy"
                android:layout_width="70dp"
                android:layout_height="94dp"
                android:onClick="detachBusy"
                android:background="@drawable/work"
                android:layout_marginRight="25dp" />

            <ImageButton
                android:id="@+id/buttonNapping"
                android:layout_width="70dp"
                android:layout_height="94dp"
                android:onClick="detachEating"
                android:background="@drawable/eating"
            />

        </LinearLayout>

        <TextView
            android:id="@+id/currentStatusHeader"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:text="You are currently"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:layout_marginTop="41dp"
            android:textSize="20dp"
            android:layout_marginBottom="19dp" />

        <TextView
            android:id="@+id/currentStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#E78A62"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/goAvailable"
            android:layout_width="183dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginBottom="61dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/imback"
            android:onClick="goAvailable"/>

    </LinearLayout>

    </ScrollView>
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</android.support.v4.widget.DrawerLayout>